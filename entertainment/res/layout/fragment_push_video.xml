<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="0dp">
        
            
        <ImageButton
            android:id="@+id/NetworkInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@drawable/fragment_push_video_net_info" />  
            
        <ImageButton
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@drawable/fragment_push_video_switch_camer" />  
 
    </LinearLayout>
            
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/controlsLayout"
        android:background="#000000" >

        <com.BC.entertainment.view.LiveSurfaceView
            android:id="@+id/videoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

