<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dialog_info_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rRelativeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.summer.view.CircularImage
            android:id="@+id/cImageportrait"
            android:layout_width="130dip"
            android:layout_height="125dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgViewAuthenticated"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignRight="@+id/cImageportrait"
            android:layout_marginTop="88dp"
            android:src="@drawable/dialog_info_authenticated" />
        <LinearLayout
            android:id="@+id/lLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cImageportrait"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/llayoutName"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            android:gravity="center"
	            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="范冰冰" />

                <ImageView
                    android:id="@+id/imgViewMale"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_info_gender_male" />
                <ImageView
                    android:id="@+id/imgViewFeMale"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_info_gender_female" />
                <ImageView
                    android:id="@+id/imgeViewCareer"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_info_career" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayoutLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="海绵娱账号:" />               
                <TextView
                    android:id="@+id/txtViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="100001" />

                <ImageView
                    android:id="@+id/imgViewLocation"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/dialog_info_location" />
                <TextView
                    android:id="@+id/txtViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="北京" /> 
                </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayoutFocus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtViewFansContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="粉丝:" />
                <TextView
                    android:id="@+id/txtViewFans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="15.6万" />
                <TextView
                    android:id="@+id/txtViewFocusContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="关注:" />
                <TextView
                    android:id="@+id/txtViewFocus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="52" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayoutMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txtViewMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="这是我的心情" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtViewManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="25dp"
            android:text="管理"
            android:textColor="#ff007f" />

        <ImageView
            android:id="@+id/imgViewClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dialog_info_close" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtViewHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:textColor="#ff007f"
            android:text="主页" />
        <TextView
            android:id="@+id/txtViewToFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#ff007f"
            android:text="关注" />
    </LinearLayout>
</LinearLayout>
