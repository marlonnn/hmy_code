<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rRelativeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/imgViewLine"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/dialog_info_line" />
	    <RelativeLayout
	        android:id="@+id/rRelativeTopInner"
	        android:layout_below="@id/imgViewLine"
	        android:layout_width="match_parent"
	        android:layout_height="260dp"
	        android:background="@color/white">

	        <TextView
	            android:id="@+id/txtViewManager"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="33dp"
	            android:layout_marginTop="33dp"
	            android:text="举报"
	            android:textColor="#ff007f" />

	        <ImageView
	            android:id="@+id/imgViewClose"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="33dp"
	            android:layout_marginRight="32dp"
	            android:background="@drawable/dialog_info_close" />

            <LinearLayout
                android:id="@+id/lLayoutLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="110dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100001"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgViewLocation"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/dialog_info_location" />

                <TextView
                    android:id="@+id/txtViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="130dp"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txtViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="范冰冰"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/imgViewMale"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_info_gender_male" />
                <ImageView
                    android:id="@+id/imgViewFeMale"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_info_gender_female" />
                <ImageView
                    android:id="@+id/imgeViewCareer"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_info_career" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayoutFocus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtViewFansContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtViewFans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.6万"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/txtViewFocusContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注:"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtViewFocus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textColor="@color/blue" />
            </LinearLayout>
			<View
			    android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginBottom="80dp"
				android:background="@color/gray" />	  
            <LinearLayout
                android:id="@+id/lLayoutMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtViewMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是我的心情"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayoutBottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/gray"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtViewHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="主页"
                    android:textColor="#ff007f"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtViewToFocus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="关注"
                    android:textColor="#ff007f"
                    android:textSize="20dp" />
            </LinearLayout>
           
        </RelativeLayout>

	    <com.summer.view.CircularImage
	        android:id="@+id/cImageportrait"
	        android:layout_width="130dp"
	        android:layout_height="130dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imgViewAuthenticated"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/cImageportrait"
            android:layout_alignRight="@+id/cImageportrait"
            android:src="@drawable/dialog_info_authenticated" />

    </RelativeLayout>
</LinearLayout>
