<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_gift_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/avatar_def"
        android:layout_marginBottom="@dimen/input_panel_image_margin_bottom"
        android:layout_marginTop="@dimen/input_panel_image_margin_top"
        android:contentDescription="@string/empty" />

    <LinearLayout
        android:id="@+id/layout_value"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#8B658B"
            android:text="1" />

        <ImageView
            android:id="@+id/imageView_value_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/active_icon2" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_experient_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="+10点经验值" />

</LinearLayout>
