<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/activity_charge_item_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_height="50dp">
    <LinearLayout
        android:id="@+id/lLayoutExplain"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
	    <ImageView
	        android:id="@+id/imgViewRank"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="5dp"
	        android:layout_gravity="center"/>    
	    <TextView
	        android:id="@+id/txtViewRange"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:gravity="center"
	        android:textStyle="bold"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/white"
	        android:textSize="25dp"/>
		<com.summer.view.CircularImage
			android:id="@+id/cImagePortrait"
			android:layout_gravity="center"
			android:layout_marginLeft="5dp"
			android:layout_width="45dip"
			android:layout_height="45dip" />
	
		<LinearLayout
		    android:id="@+id/lLayoutName"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_gravity="center"
		    android:layout_marginLeft="5dp"
		    android:orientation="vertical" >
	
			<TextView
			    android:id="@+id/txtViewName"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/white"
			    android:textSize="15dp"
			    android:gravity="center"
			    android:layout_weight="1"/>
	
			<TextView
			    android:id="@+id/txtViewContribute"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:textSize="15dp"
			    android:textColor="@color/white"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
