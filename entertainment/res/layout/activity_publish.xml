<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:select="http://schemas.android.com/apk/res/com.BC.entertainmentgravitation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_charge_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >
        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/activity_charge_back" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
            <TextView
                android:id="@+id/textViewCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:text="发布权益卡" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rLayoutName"
	    android:layout_width="match_parent"
	    android:background="@drawable/activity_charge_item_bg"
	    android:descendantFocusability="blocksDescendants"
	    android:layout_marginTop="5dp"
	    android:layout_height="50dp">
	    <TextView
	        android:id="@+id/txtRightsName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:textSize="16dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:textColor="@color/white"
	        android:text="权益名称" />

	    <TextView
	        android:id="@+id/txtViewName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:layout_toLeftOf="@+id/imgViewUp"
	        android:layout_toRightOf="@+id/txtRightsName"
	        android:hint="请选择权益"
	        android:textColor="@color/white"
	        android:textSize="18dp" />

	    <ImageView
	        android:id="@+id/imgViewUp"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="16dp"
	        android:src="@drawable/activity_publish_up" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rLayoutAmount"
	    android:layout_width="match_parent"
	    android:background="@drawable/activity_charge_item_bg"
	    android:layout_marginTop="1dp"
	    android:layout_height="50dp">
	    <TextView
	        android:id="@+id/txtRightsAmount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:textSize="16dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:textColor="@color/white"
	        android:text="总量" />

		    <EditText
		        android:id="@+id/editTextAmount"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dp"
		        android:layout_toRightOf="@+id/txtRightsAmount"
		        android:layout_weight="1"
		        android:background="@null"
		        android:hint="请填写发布数量"
		        android:inputType="number"
		        android:singleLine="true"
		        android:textColor="@color/white" >

		    </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rLayoutPrice"
	    android:layout_width="match_parent"
	    android:background="@drawable/activity_charge_item_bg"
	    android:layout_marginTop="1dp"
	    android:layout_height="50dp">
	    <TextView
	        android:id="@+id/txtRightsPrices"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:textSize="16dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:textColor="@color/white"
	        android:text="价格" />
		    <EditText
		        android:id="@+id/editTextPrice"
		        android:singleLine="true"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dp"
		        android:layout_toRightOf="@+id/txtRightsPrices"
		        android:layout_weight="1"
		        android:background="@null"
		        android:hint="请输入每张权益卡所需红宝数"
		        android:inputType="number"
		        android:textColor="@color/white" >
		    </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rLayoutRegion"
	    android:layout_width="match_parent"
	    android:background="@drawable/activity_charge_item_bg"
	    android:layout_marginTop="1dp"
	    android:layout_height="50dp">
	    <TextView
	        android:id="@+id/txtRightsRegions"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:textSize="16dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:textColor="@color/white"
	        android:text="地区" />

	    <TextView
	        android:id="@+id/txtViewRegion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/txtRightsRegions"
	        android:textSize="18dp"
	        android:hint="请选择地区"
	        android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rLayoutPublish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >
	    <ImageView
	        android:id="@+id/btnPublish"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:src="@color/hmy_red" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/white"
	        android:textSize="20dp"
	        android:text="发布" />

    </RelativeLayout>

</LinearLayout>
