<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/activity_charge_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/activity_charge_back" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/activity_personal_title" />

            <TextView
                android:id="@+id/textViewCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:text="个人中心" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.06"
        android:background="@drawable/activity_personal_portrait_bg"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" >

        <com.summer.view.CircularImage
            android:id="@+id/cirImagePortrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
        <ImageView
            android:id="@+id/imgViewAuthenticated"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/cirImagePortrait"
            android:layout_alignRight="@+id/cirImagePortrait"
            android:src="@drawable/dialog_info_authenticated" />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cirImagePortrait"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:text="" />
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/txtViewFocusContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="关注" />
            <TextView
                android:id="@+id/txtViewTopFocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:text="0" />
            <TextView
                android:id="@+id/txtViewFansContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:text="粉丝" />
            <TextView
                android:id="@+id/txtViewTopFans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:text="0" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listViewInfo"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.11"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:scrollbars="vertical" >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout android:id="@+id/bottom_panel"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_weight="0.1"
        android:orientation="horizontal" >  
    <RelativeLayout
        android:id="@+id/rLayoutExit"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
	    <ImageView
	        android:id="@+id/imgViewExit"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="5dp"
	        android:background="@color/hmy_red"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />

	    <TextView
	        android:id="@+id/txtView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="20dp"
	        android:textColor="@color/white"
	        android:text="退出登录" />

    </RelativeLayout>
    </LinearLayout>
    <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCopyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:text="Copyright® 2016 海绵娱科技有限公司" />

    </RelativeLayout> -->

</LinearLayout>
